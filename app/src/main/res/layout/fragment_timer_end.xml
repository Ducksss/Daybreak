<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/calm_background_3"
    android:backgroundTint="#80FFFFFF"
    android:backgroundTintMode="src_over"
    tools:context=".Timer.EndTimer">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Focus"
        android:textColor="@color/grey"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="30dp">

        <TextView
            android:id="@+id/focus_end_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:text="You are AMAZING"
            android:textColor="@color/orange"
            android:textSize="26dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/focus_end_description"
            android:layout_width="346dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"

            android:text="We are so proud of you, you managed to put down your phone to focus! That's Impressive
Keep it up"
            android:textColor="@color/grey"
            android:textSize="18dp" />
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/smaller_card_view"
        android:layout_width="380dp"
        android:layout_height="204dp"
        android:layout_marginTop="200sp"
        android:layout_centerHorizontal="true"
        app:cardCornerRadius="7dp"
        app:cardElevation="12dp"
        app:cardUseCompatPadding="true">

        <!-- Media -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Your Total Number of Focus Sessions"
                    android:textColor="@color/orange" />

                <TextView
                    android:id="@+id/timer_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="100dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="13 Times"
                    android:textColor="@color/black"
                    android:textSize="18dp" />

            </LinearLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/timer_home_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/smaller_card_view"
        android:layout_marginTop="68dp"
        android:layout_marginLeft="100dp"
        android:backgroundTint="@color/white"
        android:text="Back to home page"
        android:textColor="@color/orange"
        app:cornerRadius="100dp" />


</RelativeLayout>